{% extends 'base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Utilisateurs</h1>

    <table id="users-table" class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Nom d'utilisateur</th>
                <th>Rôle(s)</th>
                <th>Abonnements</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.roles|join(', ') }}</td>
                    <td>
                        {% if user.subscriptions|length == 0 %}
                            <span class="text-muted">Aucun</span>
                        {% else %}
                            <ul class="list-unstyled mb-0">
                                {% for sub in user.subscriptions %}
                                    <li class="mb-2">
                                        <i class="bi bi-credit-card"></i> 
                                        <strong>{{ sub.stripeSubscriptionId }}</strong><br>
                                        <small>
                                            {{ sub.start|date('d/m/Y') }} → {{ sub.end|date('d/m/Y') }}<br>
                                            {{ sub.price }} €
                                        </small>
                                    </li>
                                {% endfor %}
                            </ul>
                        {% endif %}
                    </td>
                    <td>
                        <div class="btn-group">
                            <a href="{{ path('app_admin_user_show', {id: user.id}) }}" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a href="{{ path('app_admin_user_edit', {id: user.id}) }}" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-pencil"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>

        document.addEventListener('DOMContentLoaded', () => {
            $('#users-table').DataTable({
                pageLength: 10,
                lengthChange: false,
                order: [[0, 'desc']],
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/fr-FR.json'
                }
            });
        });
    </script>
{% endblock %}
