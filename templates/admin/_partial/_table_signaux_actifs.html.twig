<div class="card bg-card text-light mb-5 shadow-sm border-0">
  <div class="card-header bg-dark text-center py-4">
    <i class="bi bi-graph-up text-purple fs-2 mb-3 d-block"></i>
    <h2 class="h4 mb-0">Gestion des Signaux Actifs</h2>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table id="signals-table" class="datatable table table-dark table-bordered table-hover align-middle mb-0">
        <thead>
          <tr>
            <th>ID</th>
            <th>Actif</th>
            <th>Type</th>
            <th>Timeframe</th>
            <th>Entrée</th>
            <th>Créé le</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          {% for signal in signals %}
            <tr>
              <td>{{ signal.id }}</td>
              <td>{{ signal.symbol }}</td>
              <td>
                <span class="badge {{ signal.signalType == 'Buy' ? 'bg-success' : 'bg-danger' }}">{{ signal.signalType }}</span>
              </td>
              <td>{{ signal.timeFrame }}</td>
              <td>{{ signal.entryPrice|number_format(2, ',', ' ') }}</td>
              <td>{{ signal.createdAt|date('d/m/Y H:i') }}</td>
              <td class="text-end">
                <button class="btn btn-outline-secondary btn-sm" data-bs-toggle="modal" data-bs-target="#closeModal-{{ signal.id }}">
                  <i class="bi bi-x-circle"></i>
                  Fermer
                </button>
              </td>
            </tr>
          {% else %}
            <tr>
              <td colspan="7" class="text-center text-muted">Aucun signal actif</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div>