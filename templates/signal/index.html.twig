<div class="container my-5">
	<div class="table-responsive shadow-sm rounded border">
		<table class="table table-hover table-bordered align-middle mb-0">
			<thead class="table-light">
				<tr>
					<th>Asset</th>
					<th>Price</th>
					<th>Date</th>
					<th>Signal Age</th>
					<th>Signal Type</th>
					<th>Category</th>
					<th>Chart</th>
				</tr>
			</thead>
			<tbody>
				{% for signal in signals %}
					<tr>
						<td class="fw-semibold">{{ signal.symbol }}</td>
						<td>${{ signal.price|number_format(2, '.', ',') }}</td>
						<td>{{ signal.createdAt|date('n/j/Y, g:i:s A') }}</td>
						<td>{{ signal.signalAge }}</td>
						<td>
							{% if signal.signalType == 'Buy' %}
								<span class="d-inline-flex align-items-center rounded-pill border border-success bg-success bg-opacity-10 text-success fw-semibold px-3 py-1 text-nowrap small">
									<i class="bi bi-graph-up-arrow me-1"></i>
									Buy
								</span>
							{% else %}
								<span class="d-inline-flex align-items-center rounded-pill border border-danger bg-danger bg-opacity-10 text-danger fw-semibold px-3 py-1 text-nowrap small">
									<i class="bi bi-graph-down-arrow me-1"></i>
									Sell
								</span>
							{% endif %}
						</td>

						<td>
							<span class="badge rounded-pill bg-secondary text-light d-inline-flex align-items-center gap-1 px-3 py-1">
								<i class="bi bi-tag-fill small"></i>
								{{ signal.category }}
							</span>

						</td>
						<td>
							<a href="https://www.tradingview.com/chart/?symbol={{ signal.symbol }}" target="_blank" class="btn btn-outline-secondary btn-sm">
								View
								<i class="bi bi-box-arrow-up-right ms-1"></i>
							</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="7" class="text-center text-muted">No signals found.</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
</div>
