<div class="container my-5 position-relative">

    {% if not hasActive %}
        <div class="position-fixed top-0 start-0 end-0 bottom-0 bg-dark bg-opacity-75 text-white d-flex flex-column justify-content-center align-items-center px-3" style="z-index: 1050;">
            <div class="text-center mb-4">
                <i class="bi bi-lock-fill fs-1 mb-3"></i>
                <p class="lead">{{ 'Vous devez être abonné pour voir les signaux'|trans }}.</p>
            </div>
            <div>
                <a href="{{ path('subscription_plans') }}" class="btn btn-primary">{{ 'Voir les offres'|trans }}</a>
            </div>
        </div>
    {% endif %}

    {% if hasActive %}
        <div class="mb-3 d-flex flex-wrap gap-3 align-items-end">
            <div>
                <label class="form-label">{{ 'All Assets'|trans }}</label>
                <select class="form-select column-filter" data-column="0">
                    <option value="">{{ 'All Assets'|trans }}</option>
                    {% for asset in assets %}
                        <option value="{{ asset }}">{{ asset }}</option>
                    {% endfor %}
                </select>
            </div>

            <div>
                <label class="form-label">{{ 'All Types'|trans }}</label>
                <select class="form-select column-filter" data-column="4">
                    <option value="">{{ 'All Types'|trans }}</option>
                    <option value="Buy">{{ 'Buy'|trans }}</option>
                    <option value="Sell">{{ 'Sell'|trans }}</option>
                </select>
            </div>

            <div>
                <label class="form-label">{{ 'All Categories'|trans }}</label>
                <select class="form-select column-filter" data-column="5">
                    <option value="">{{ 'All Categories'|trans }}</option>
                    {% for cat in categories %}
                        <option value="{{ cat }}">{{ cat }}</option>
                    {% endfor %}
                </select>
            </div>

            <div>
                <label class="form-label">{{ 'Pick a date range'|trans }}</label>
                <input type="text" id="date-range" class="form-control" placeholder="{{ 'Pick a date range'|trans }}">
            </div>

            <div>
                <button id="reset-filters" class="btn btn-outline-secondary mt-2">
                    {{ 'Reset Filters'|trans }}
                </button>
            </div>
        </div>
    {% endif %}

    <div class="table-responsive shadow-sm rounded border {{ not hasActive ? 'opacity-25' : '' }}">
        <table id="signals-table" class="table table-hover table-bordered align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>{{ 'Asset'|trans }}</th>
                    <th>{{ 'Price'|trans }}</th>
                    <th>{{ 'Date'|trans }}</th>
                    <th>{{ 'Signal Age'|trans }}</th>
                    <th>{{ 'Signal Type'|trans }}</th>
                    <th>{{ 'Category'|trans }}</th>
                    <th>{{ 'Chart'|trans }}</th>
                </tr>
            </thead>
            <tbody>
                {% for signal in signals %}
                    <tr>
                        <td class="fw-semibold">{{ signal.symbol }}</td>
                        <td>${{ signal.price|number_format(2, '.', ',') }}</td>
                        <td>{{ signal.createdAt|date('Y-m-d') }}</td>
                        <td>{{ signal.signalAge }}</td>
                        <td>
                            {% if signal.signalType == 'Buy' %}
                                <span class="d-inline-flex align-items-center rounded-pill border border-success bg-success bg-opacity-10 text-success fw-semibold px-3 py-1 text-nowrap small">
                                    <i class="bi bi-graph-up-arrow me-1"></i>
                                    {{ 'Buy'|trans }}
                                </span>
                            {% else %}
                                <span class="d-inline-flex align-items-center rounded-pill border border-danger bg-danger bg-opacity-10 text-danger fw-semibold px-3 py-1 text-nowrap small">
                                    <i class="bi bi-graph-down-arrow me-1"></i>
                                    {{ 'Sell'|trans }}
                                </span>
                            {% endif %}
                        </td>
                        <td>
                            <span class="badge rounded-pill bg-secondary text-light d-inline-flex align-items-center gap-1 px-3 py-1">
                                <i class="bi bi-tag-fill small"></i>
                                {{ signal.category }}
                            </span>
                        </td>
                        <td>
                            <a href="https://www.tradingview.com/chart/?symbol={{ signal.symbol }}" target="_blank" class="btn btn-outline-secondary btn-sm">
                                {{ 'View'|trans }}
                                <i class="bi bi-box-arrow-up-right ms-1"></i>
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7" class="text-center text-muted">{{ 'No signals found'|trans }}.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
