{% extends 'base.html.twig' %}

{% block title %}Trading Signal History{% endblock %}

{% block body %}
<div class="card bg-card text-light mb-5 shadow-sm border-0">
  <div class="card-header bg-dark text-center py-4">
    <h2 class="h4 mb-0">{{ "Historical Performance"|trans }}</h2>
    <p class="text-muted">{{ "Review past signals and their outcomes. Filter by asset, type, or date"|trans }}.</p>
  </div>

  <div class="card-body">

    <div class="d-flex flex-wrap justify-content-between align-items-center mb-4">
      <button id="reset-filters" class="btn btn-outline-secondary mb-3">
        <i class="bi bi-x-circle me-2"></i> {{ "Réinitialiser les filtres"|trans }}
      </button>
    </div>

    <div class="row g-3 mb-4">
      <div class="col-md-3">
        <label class="form-label text-muted">{{ "Actif"|trans }}</label>
        <select class="form-select bg-dark text-light border-secondary column-filter" data-column="2">
          <option value="">{{ "Tous"|trans }}</option>
          {% for asset in assetsHistory %}
            <option value="{{ asset }}">{{ asset }}</option>
          {% endfor %}
        </select>
      </div>

      <div class="col-md-3">
        <label class="form-label text-muted">Type</label>
        <select class="form-select bg-dark text-light border-secondary column-filter" data-column="3">
          <option value="">{{ "Tous"|trans }}</option>
          <option value="Buy">{{ "Buy"|trans }}</option>
          <option value="Sell">{{ "Sell"|trans }}</option>
        </select>
      </div>

      <div class="col-md-3">
        <label class="form-label text-muted">{{ "Date d'entrée min"|trans }}</label>
        <input type="text" id="min-date" class="form-control bg-dark text-light border-secondary" autocomplete="off">
      </div>
      <div class="col-md-3">
        <label class="form-label text-muted">{{ "Date d'entrée max"|trans }}</label>
        <input type="text" id="max-date" class="form-control bg-dark text-light border-secondary" autocomplete="off">
      </div>
    </div>

    {% if signalsHistory is empty %}
      <div class="alert alert-warning text-center">{{ "Aucun signal historique"|trans }}</div>
    {% endif %}

    <div class="table-responsive shadow-sm rounded border border-secondary">
      <table id="signals-table-history" class="table table-dark table-bordered table-hover align-middle mb-0">
        <thead>
          <tr>
            <th>{{ "Date d'entrée"|trans }}</th>
            <th>{{ "Date de clôture"|trans }}</th>
            <th>{{ "Actif"|trans }}</th>
            <th>{{ "Type"|trans }}</th>
            <th>{{ "TimeFrame"|trans }}</th>
            <th>{{ "Prix d'entrée"|trans }}</th>
            <th>{{ "Prix de sortie"|trans }}</th>
            <th>{{ "Pips"|trans }}</th>
            <th>{{ "Résultat"|trans }}</th>
            <th>{{ "Screenshot"|trans }}</th>
            <th>{{ "Actions"|trans }}</th>
          </tr>
        </thead>
        <tbody>
          {% for signalHistory in signalsHistory %}
            <tr>
              <td>{{ signalHistory.createdAt|date('Y-m-d') }}</td>
              <td>{{ signalHistory.closedAt|date('Y-m-d') }}</td>
              <td>{{ signalHistory.symbol }}</td>
              <td>
                <span class="badge {{ signalHistory.signalType == 'Buy' ? 'bg-success' : 'bg-danger' }}">{{ signalHistory.signalType }}</span>
              </td>
              <td>{{ signalHistory.timeFrame }}</td>
              <td>{{ signalHistory.entryPrice }}</td>
              <td>{{ signalHistory.exitPrice }}</td>
              <td>{{ signalHistory.pips }}</td>
              <td>{{ signalHistory.result }}</td>
              <td>
                {% if signalHistory.screenshot %}
                  <button type="button"
                          class="btn btn-outline-secondary btn-sm"
                          data-bs-toggle="modal"
                          data-bs-target="#screenshotModal"
                          data-img="{{ asset('uploads/screenshots/' ~ signalHistory.screenshot) }}"
                          data-symbol="{{ signalHistory.symbol }}">
                    <i class="bi bi-eye"></i> Voir
                  </button>
                {% else %}
                  <span class="text-muted">-</span>
                {% endif %}
              </td>
              <td>
                <a href="https://www.tradingview.com/chart/?symbol={{ signalHistory.symbol }}"
                   target="_blank"
                   class="btn btn-outline-secondary btn-sm d-inline-flex align-items-center gap-1">
                  {{ 'View'|trans }}
                  <i class="bi bi-box-arrow-up-right"></i>
                </a>
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div>

<!-- Screenshot Modal -->
<div class="modal fade" id="screenshotModal" tabindex="-1" aria-labelledby="screenshotModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content bg-card border border-secondary">
      <div class="modal-header">
        <h5 class="modal-title d-flex align-items-center gap-2" id="screenshotModalLabel">
          <i class="bi bi-image"></i> {{ "Screenshot"|trans }}
        </h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Fermer"></button>
      </div>
      <div class="modal-body text-center">
        <img id="modal-screenshot-image" src="" alt="Screenshot" class="img-fluid rounded shadow d-none">
        <p id="modal-screenshot-placeholder" class="text-muted">{{ "Chargement"|trans }}...</p>
      </div>
      <div class="modal-footer border-0 justify-content-end">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{ "Fermer"|trans }}</button>
      </div>
    </div>
  </div>
</div>

{% endblock %}
