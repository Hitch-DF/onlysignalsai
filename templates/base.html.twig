<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{% block title %}OnlySignals AI{% endblock %}</title>

  <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('logo.png') }}">
  <link rel="shortcut icon" href="{{ asset('logo.png') }}">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

  {% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
  {% endblock %}

</head>
<body class="bg-background text-foreground">

<!-- Toggle Button -->
<button id="toggleSidebar" class="btn btn-outline-secondary toggle-sidebar-btn">
  <i class="bi bi-list"></i>
</button>

<div class="container-fluid">
  <div class="row">
  {% include "_partial/sidebar.html.twig" %}
    <div class="col ps-md-4 pt-4">
      {% block body %}{% endblock %}
      {% block footer %}
        <footer class="text-center py-4 text-muted small border-top border-secondary">
          © {{ "now"|date("Y") }} OnlySignals. {{ 'Tous droits réservés'|trans }}.
        </footer>
      {% endblock %}
    </div>
  </div>
</div>

<!-- Scripts -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
  const toggleBtn = document.getElementById('toggleSidebar');
  const sidebar = document.getElementById('sidebar');

  toggleBtn.addEventListener('click', () => {
    if (window.innerWidth < 768) {
      sidebar.classList.toggle('show');
      document.body.classList.toggle('overflow-hidden');
    } else {
      sidebar.classList.toggle('collapsed');
    }
  });
</script>

{% block javascripts %}
  {{ encore_entry_script_tags('app') }}
{% endblock %}
</body>
</html>
