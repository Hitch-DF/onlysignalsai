{% extends 'base.html.twig' %}

{% block title %}{{ 'Email de réinitialisation envoyé'|trans }}{% endblock %}

{% block body %}
<div class="min-vh-100 d-flex flex-column bg-card text-light">
  <main class="flex-grow-1 d-flex justify-content-center align-items-center px-3 py-5">
    <div class="card shadow-sm border border-secondary bg-card text-light w-100" style="max-width: 480px;">
      <div class="card-body text-center">
        <h1 class="h4 fw-bold mb-3">{{ 'Vérifiez votre boîte mail'|trans }}</h1>
        <p class="text-muted small mb-3">
          {{ "Si un compte correspondant existe, un email vient de vous être envoyé avec un lien de réinitialisation."|trans }}
        </p>

        <p class="small mb-3">
          {{ 'Ce lien expirera dans'|trans }} 
          <strong>{{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}</strong>.
        </p>

        <p class="small text-muted">
          {{ "Si vous ne recevez pas d'email, vérifiez votre dossier spam ou"|trans }} 
          <a href="{{ path('app_forgot_password_request') }}" class="text-decoration-underline fw-semibold">{{ 'réessayez'|trans }}</a>.
        </p>
      </div>
    </div>
  </main>

</div>
{% endblock %}
